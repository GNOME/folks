[library]
version = "@VERSION@"
description = "People aggregation library"
authors = "folks contributors"
license = "LGPL-2.1-or-later"
browse_url = "https://gitlab.gnome.org/GNOME/folks/"
repository_url = "https://gitlab.gnome.org/GNOME/folks.git"
website_url = "https://gnome.pages.gitlab.gnome.org/folks"
dependencies = [
  "GObject-2.0",
]
devhelp = true
search_index = true

[dependencies."GObject-2.0"]
name = "GObject"
description = "The base type system library"
docs_url = "https://developer.gnome.org/gobject/stable"

[theme]
name = "basic"
show_index_summary = true
show_class_hierarchy = true

[source-location]
# The base URL for the web UI
base_url = "https://gitlab.gnome.org/GNOME/folks/-/blob/main/"
# The format for links, using "filename" and "line" for the format
file_format = "{filename}#L{line}"